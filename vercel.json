{
  "version": 2,
  "builds": [
    { "src": "apps/web/index.html", "use": "@vercel/static-build" }
  ],
  "installCommand": "npm ci",
  "buildCommand": "npm --prefix apps/web run build",
  "outputDirectory": "apps/web/dist",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
