{
    "name": "project-monorepo",
    "private": true,
    "version": "0.1.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
  "scripts": {
        "dev": "concurrently -n web,api,bot -c blue,green,magenta \"npm run -w @repo/web dev\" \"npm run -w @repo/api dev\" \"npm run -w @repo/bot dev\"",
        "dev:web": "npm run -w @repo/web dev:web",
        "dev:api": "npm run -w @repo/api dev",
        "dev:bot": "npm run -w slav-rpg-bot dev:bot",
    "dev:all": "bash scripts/dev-all.sh",
        "build": "npm run -ws build",
        "build:web": "npm run -w @repo/web build",
        "build:api": "npm run -w @repo/api build",
        "build:bot": "npm run -w slav-rpg-bot build:bot",
        "build:shared": "npm run -w @repo/shared build",
        "start:bot": "npm run -w slav-rpg-bot start:bot",
        "migrate": "npm run -w @repo/api migrate",
    "seed": "npm run -w @repo/api seed",
    "encoding:fix": "bash scripts/fix-encoding.sh",
    "fix:bom": "node scripts/strip-bom.mjs",
    "deploy:web": "vercel --prod"
  },
  "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^7.17.0",
        "@typescript-eslint/parser": "^7.17.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.57.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.3.3",
        "tsx": "^4.15.7",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "kill-port": "^2.0.1"
  }
}
