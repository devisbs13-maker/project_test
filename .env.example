# Root .env example for all packages

# WEBAPP (apps/web)
VITE_API_URL=http://localhost:3000

# API (apps/api)
DATABASE_URL=sqlite:./dev.sqlite
# Telegram Bot token used for initData verification and bot auth
BOT_TOKEN=123456:ABCDEF_your_bot_token_here
# Optional legacy env name used by some libs (also supported by this repo)
TELEGRAM_BOT_TOKEN=

# Allow bypassing Telegram WebApp signature verification in development
# WARNING: must be false/empty in production
TELEGRAM_AUTH_BYPASS=false

# JWT secret (for future auth features)
JWT_SECRET=replace_with_secure_random_string

# BOT (apps/bot)
WEBAPP_URL=http://localhost:5173
