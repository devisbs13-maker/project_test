# Root .env example for all packages

# WEBAPP (apps/web)
# In production behind Nginx on a single domain, API is proxied at /api
VITE_API_URL=/api

# API (apps/api)
# Use MySQL/MariaDB in production. Example DSN (URL-encode special chars in password):
# mysql://USER:PASSWORD@HOST:3306/DATABASE
DATABASE_URL=mysql://appuser:app_password@127.0.0.1:3306/mirevald
# Server bind options
API_PORT=4000
HOST=0.0.0.0
# Force using Prisma backend in prod (not JSON mock)
PRISMA_BACKEND=prisma
# CORS settings
# Comma-separated ORIGINS for web client
CORS_ORIGINS=https://itsagame.etojesim.com
# Set true only for local dev if needed
CORS_ANY=false
# Telegram Bot token used for initData verification and bot auth
BOT_TOKEN=123456:ABCDEF_your_bot_token_here
# Optional legacy env name used by some libs (also supported by this repo)
TELEGRAM_BOT_TOKEN=

# Allow bypassing Telegram WebApp signature verification in development
# WARNING: must be false/empty in production
TELEGRAM_AUTH_BYPASS=false

# JWT secret (for future auth features)
JWT_SECRET=replace_with_secure_random_string

# BOT (apps/bot)
WEBAPP_URL=http://localhost:5173
